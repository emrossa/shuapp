<!-- views/pages/locations.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

<header>
    <% include ../partials/header %>
</header>

<main>
<div class="row">
    <div class="col-sm-8">    
        <div class="jumbotron">
            <h2>Choose your perfect location</h2>
            <p>If you prefer your own place, get in touch with us.</p>
            <ul>
                <% location.forEach(function(place) { %>
                    <li><%= place.locationname %> - <%= place.locationprice %></li>
                <% }); %>
            </ul> 
        </div>
    </div>

    <div class="col-sm-4">        
        <div class="well">
            <h3>My Account</h3>
        </div>
    </div>

</div>
</main>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>